{
  "name": "fusioncss",
  "version": "3.3.0",
  "description": "Responsive CSS framework",
  "devDependencies": {
    "@parcel/transformer-less": "^2.8.3",
    "concat-cli": "^4.0.0",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "panini": "^1.7.2",
    "parcel": "^2.8.3",
    "rimraf": "^4.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/paularlott/fusionCSS.git"
  },
  "author": "Paul Arlott",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paularlott/fusionCSS/issues"
  },
  "scripts": {
    "build": "npm-run-all -l -p build-themes build-single build-js",
    "build-all": "npm run build && npm run build-docs",
    "build-themes": "parcel build --dist-dir ./css/ ./less/themes/*.less",
    "build-js": "parcel build --dist-dir ./js/ ./js/src/*.js",
    "build-single": "concat-cli -f ./less/elements/*.less -o ./css/fusionCSS.less",
    "build-docs": "panini --root=./docs_src/ --layouts=./docs_src/layouts/ --partials=./docs_src/partials/ --helpers=./docs_src/helpers/ --data=./docs_src/data/ --output=./docs/ ./docs_src/*.html",
    "watch": "onchange \"./less/**/*.less\" \"./js/src/**/*.js\" -- npm run build",
    "clean": "rimraf ./css/* ./js/*.js ./docs/*.html"
  }
}
